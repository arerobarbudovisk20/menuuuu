int num_menu;
int num_alter;

void menu_jogos(){
	printf("MENU DE JOGOS\n");
	printf("1 - pergunta/resposta\n");
	printf("2 - adivinhar numero\n");
	printf("3 - olho da cobra\n");
	printf("4 - pergunta/resposta\n");
	
	printf("Escolha uma das opcoes: ");
	scanf("%d",&num_menu);
	
	if(num_menu == 1){
		pergunta_resposta();
	}
	
}

void pergunta_resposta(){
	system("cls || clear");
	printf("Normalmente, quantos litros de sangue uma pessoa tem? Em media, quantos sao retirados numa doacao de sangue?\n");
